{
    "name": "blockera/autoloader-coordinator",
    "description": "Coordinates autoloading across WordPress plugins to resolve version conflicts and optimize shared package loading.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Blockera",
            "email": "support@blockera.ai"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/composer": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Blockera\\SharedAutoload\\": "packages/autoloader-coordinator/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blockera\\SharedAutoload\\Tests\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

